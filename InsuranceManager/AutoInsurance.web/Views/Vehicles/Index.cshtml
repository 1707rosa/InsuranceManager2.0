@model IEnumerable<AutoInsurance.Domain.Vehicle>

@{
    ViewData["Title"] = "Vehicles List";
}

<h1>Vehicles List</h1>

<p>
    <a href="@Url.Action("Create", "Vehicles")" class="btn btn-primary">Create New Vehicle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Plate Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Make</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.PlateNumber</td>
                <td>
                    <a href="@Url.Action("Edit", "Vehicles", new { id = vehicle.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Vehicles", new { id = vehicle.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
