@model IEnumerable<AutoInsurance.Domain.Customer>

@{
    ViewData["Title"] = "Customers List";
}

<h1>Customers List</h1>

<p>
    <a href="@Url.Action("Create", "Customers")" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>
                    <a href="@Url.Action("Edit", "Customers", new { id = customer.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Customers", new { id = customer.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
