@model Autoinsurance.Domain.Entities.Customer

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-5">
    <h2 class="text-center mb-5">Editar Cliente</h2>

    <form asp-action="Edit" method="post" class="card p-5 shadow-lg rounded-3 bg-light">
        @Html.HiddenFor(m => m.Id)

        <div class="mb-4">
            <label asp-for="Nombre" class="form-label fs-5 fw-semibold">Nombre</label>
            <input asp-for="Nombre" class="form-control form-control-lg" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Telefono" class="form-label fs-5 fw-semibold">Teléfono</label>
            <input asp-for="Telefono" class="form-control form-control-lg" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="form-label fs-5 fw-semibold">Correo Electrónico</label>
            <input asp-for="Email" class="form-control form-control-lg" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5 py-3">Guardar cambios</button>
        </div>
    </form>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary btn-lg">Volver a la lista</a>
    </div>
</div>

