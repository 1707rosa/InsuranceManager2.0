@model IEnumerable<Autoinsurance.Domain.Entities.Customer>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => cliente.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => cliente.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => cliente.Email)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
