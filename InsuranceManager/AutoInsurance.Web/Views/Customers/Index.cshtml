@model IEnumerable<Autoinsurance.Models.Customers>

<h2>Lista de Clientes</h2>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.nombre</td>
                <td>@cliente.telefono</td>
                <td>@cliente.email</td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { id = cliente.id })">Detalles</a> |
                    <a href="@Url.Action("Edit", "Customers", new { id = cliente.id })">Editar</a> |
                    <a href="@Url.Action("Delete", "Customers", new { id = cliente.id })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Customers")">Agregar Cliente</a>
