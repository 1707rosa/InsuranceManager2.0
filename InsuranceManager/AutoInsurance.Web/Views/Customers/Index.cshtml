@model IEnumerable<Autoinsurance.Domain.Entities.Customer>

<h2>Lista de Clientes</h2>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Email</td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { Id = cliente.Id })">Detalles</a> |
                    <a href="@Url.Action("Edit", "Customers", new { Id = cliente.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", "Customers", new { Id = cliente.Id })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Customers")">Agregar Cliente</a>
