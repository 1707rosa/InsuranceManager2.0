@model Autoinsurance.Domain.Entities.Claim

<h2>Eliminar Reclamación</h2>
<p>¿Estás seguro de que deseas eliminar la reclamación con número @Model.ClaimNumber?</p>

<div>
    <h4>Reclamación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClaimNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClaimNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClaimAmount)
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:C}", Model.ClaimAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClaimDate)
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:dd/MM/yyyy}", Model.ClaimDate)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Eliminar</button>
    }
    <a href="@Url.Action("Index", "Claim")" class="btn btn-secondary">Cancelar</a>
</div>
