@model Autoinsurance.Domain.Entities.Payment

<h2>Editar Pago</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div>
        <label>Fecha de Pago:</label>
        @Html.TextBoxFor(m => m.PaymentDate, "{0:yyyy-MM-dd}")
    </div>
    <div>
        <label>Monto:</label>
        @Html.TextBoxFor(m => m.Amount)
    </div>
    <div>
        <label>Póliza:</label>
        @Html.DropDownListFor(m => m.PolicyId, new SelectList(ViewBag.Policies, "Id", "PolicyNumber", Model.PolicyId))
    </div>
    <button type="submit">Guardar Cambios</button>
}
<a href="@Url.Action("Index", "Payments")">Volver a la lista</a>
