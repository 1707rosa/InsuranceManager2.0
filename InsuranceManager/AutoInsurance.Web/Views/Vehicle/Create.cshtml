@model Autoinsurance.Domain.Entities.Vehicle

<div class="container mt-5">
    <h2 class="text-center mb-5">Registrar Vehículo</h2>

    <form asp-action="Create" class="card p-5 shadow-lg rounded-3 bg-light">
        <div class="mb-4">
            <label asp-for="Make" class="form-label fs-5 fw-semibold">Marca</label>
            <input asp-for="Make" class="form-control form-control-lg" placeholder="Ingrese la marca del vehículo" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Model" class="form-label fs-5 fw-semibold">Modelo</label>
            <input asp-for="Model" class="form-control form-control-lg" placeholder="Ingrese el modelo del vehículo" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Year" class="form-label fs-5 fw-semibold">Año</label>
            <input asp-for="Year" class="form-control form-control-lg" placeholder="Ingrese el año del vehículo" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PlateNumber" class="form-label fs-5 fw-semibold">Número de Placa</label>
            <input asp-for="PlateNumber" class="form-control form-control-lg" placeholder="Ingrese el número de placa del vehículo" />
            <span asp-validation-for="PlateNumber" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CustomersId" class="form-label fs-5 fw-semibold">Cliente</label>
            <select asp-for="CustomersId" class="form-select form-select-lg">
                <option value="">Seleccione un Cliente</option>
                @foreach (var cliente in ViewBag.Clientes as List<Autoinsurance.Domain.Entities.Customer>)
                {
                    <option value="@cliente.Id">@cliente.Nombre</option>
                }
            </select>
            <span asp-validation-for="CustomersId" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5 py-3">Registrar Vehículo</button>
        </div>
    </form>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Vehicle")" class="btn btn-secondary btn-lg">Volver a la lista</a>
    </div>
</div>
