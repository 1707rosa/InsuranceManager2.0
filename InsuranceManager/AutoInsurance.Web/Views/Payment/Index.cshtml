@model IEnumerable<Autoinsurance.Domain.Entities.Payment>

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Pagos</h2>

    <div class="d-flex justify-content-between mb-4 flex-wrap">
        <div class="d-flex">
            <a href="@Url.Action("Create", "Payment")" class="btn btn-success btn-lg me-3">
                <i class="fas fa-plus-circle"></i> Agregar Pago
            </a>
        </div>
        <div class="d-flex">
            <input type="text" class="form-control w-100 w-md-25" placeholder="Buscar..." id="searchPayment" />
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle shadow-lg rounded">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                    <th>@Html.DisplayNameFor(model => model.PolicyId)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in Model)
                {
                    <tr>
                        <td>@string.Format("{0:dd/MM/yyyy}", pago.PaymentDate)</td>
                        <td>@Html.DisplayFor(modelItem => pago.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => pago.PolicyId)</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "Payment", new { id = pago.Id })" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Detalles</a>
                            <a href="@Url.Action("Edit", "Payment", new { id = pago.Id })" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                            <a href="@Url.Action("Delete", "Payment", new { id = pago.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este pago?');"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .thead-light th {
        background-color: #f8f9fa;
        color: #495057;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table {
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.875rem;
    }

    .btn-lg {
        font-size: 1.1rem;
    }

    .btn i {
        margin-right: 8px;
    }

    #searchPayment {
        max-width: 250px;
    }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
