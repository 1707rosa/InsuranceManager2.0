@model Autoinsurance.Models.Claims

<h2>Editar Reclamación</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div>
        <label>Número de Reclamación:</label>
        @Html.TextBoxFor(m => m.ClaimNumber)
    </div>
    <div>
        <label>Póliza:</label>
        @Html.DropDownListFor(m => m.PolicyId, new SelectList(ViewBag.Policies, "Id", "PolicyNumber", Model.PolicyId))
    </div>
    <div>
        <label>Monto:</label>
        @Html.TextBoxFor(m => m.ClaimAmount)
    </div>
    <div>
        <label>Fecha:</label>
        @Html.TextBoxFor(m => m.ClaimDate, "{0:yyyy-MM-dd}")
    </div>
    <div>
        <label>Estado:</label>
        @Html.TextBoxFor(m => m.Status)
    </div>
    <button type="submit">Guardar Cambios</button>
}
<a href="@Url.Action("Index", "Claims")">Volver a la lista</a>
