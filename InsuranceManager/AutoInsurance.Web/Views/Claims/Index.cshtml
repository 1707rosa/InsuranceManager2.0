@model IEnumerable<Autoinsurance.Domain.Entities.Claim>

<h2>Lista de Reclamaciones</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ClaimNumber)</th>
            <th>@Html.DisplayNameFor(model => model.PolicyId)</th>
            <th>@Html.DisplayNameFor(model => model.ClaimAmount)</th>
            <th>@Html.DisplayNameFor(model => model.ClaimDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reclamo in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => reclamo.ClaimNumber)</td>
                <td>@Html.DisplayFor(modelItem => reclamo.PolicyId)</td>
                <td>@Html.DisplayFor(modelItem => reclamo.ClaimAmount)</td>
                <td>@string.Format("{0:dd/MM/yyyy}", reclamo.ClaimDate)</td>
                <td>@Html.DisplayFor(modelItem => reclamo.Status)</td>
                <td>
                    <a href="@Url.Action("Details", "Claims", new { id = reclamo.Id })">Detalles</a> |
                    <a href="@Url.Action("Edit", "Claims", new { id = reclamo.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", "Claims", new { id = reclamo.Id })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Claims")">Agregar Reclamación</a>

