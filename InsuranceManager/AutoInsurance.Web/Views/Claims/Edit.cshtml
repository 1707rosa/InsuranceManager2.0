@model Autoinsurance.Domain.Entities.Claim

@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ClaimNumber" class="control-label"></label>
        <input asp-for="ClaimNumber" class="form-control" />
        <span asp-validation-for="ClaimNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Cliente:</label>
        @Html.DropDownListFor(m => m.PolicyId, new SelectList(ViewBag.Policies, "Id", "PolicyNumber", Model.PolicyId), "--Seleccione una póliza--", new { @class = "form-control" })
        <span asp-validation-for="PolicyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClaimAmount" class="control-label"></label>
        <input asp-for="ClaimAmount" class="form-control" />
        <span asp-validation-for="ClaimAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClaimDate" class="control-label"></label>
        <input asp-for="ClaimDate" class="form-control" type="date" />
        <span asp-validation-for="ClaimDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
