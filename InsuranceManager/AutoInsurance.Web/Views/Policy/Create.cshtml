@model Autoinsurance.Domain.Entities.Policy

<h2 class="text-center mb-4">Registrar Póliza</h2>

<form asp-action="Create" class="p-4 border rounded shadow-sm bg-white">
    <div class="form-group mb-3">
        <label asp-for="PolicyNumber" class="form-label">Número de Póliza</label>
        <input asp-for="PolicyNumber" class="form-control" placeholder="Ingrese el número de póliza" />
        <span asp-validation-for="PolicyNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CustomersId" class="form-label">Cliente</label>
        <select asp-for="CustomersId" class="form-select" id="Cliente">
            @if (ViewData["CustomersId"] != null)
            {
                var customers = ViewData["CustomersId"] as SelectList;
                foreach (var customer in customers)
                {
                    <option value="@customer.Value">@customer.Text</option>
                }
            }
            else
            {
                <option value="">No hay clientes disponibles</option>
            }
        </select>
        <span asp-validation-for="CustomersId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VehicleId" class="form-label">Vehículo</label>
        <select asp-for="VehicleId" class="form-select">
            <option value="">Seleccione un Vehículo</option>
            @if (ViewData["VehicleId"] != null)
            {
                var vehicles = ViewData["VehicleId"] as SelectList;
                foreach (var vehicle in vehicles)
                {
                    <option value="@vehicle.Value">@vehicle.Text</option>
                }
            }
            else
            {
                <option value="">No hay vehículos disponibles</option>
            }
        </select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CoverageAmount" class="form-label">Monto de Cobertura</label>
        <input asp-for="CoverageAmount" class="form-control" placeholder="Ingrese el monto de cobertura" />
        <span asp-validation-for="CoverageAmount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PremiumAmount" class="form-label">Monto de Prima</label>
        <input asp-for="PremiumAmount" class="form-control" placeholder="Ingrese el monto de prima" />
        <span asp-validation-for="PremiumAmount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartDate" class="form-label">Fecha de Inicio</label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="EndDate" class="form-label">Fecha de Finalización</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Guardar Póliza" class="btn btn-primary btn-lg" />
    </div>
</form>

<div class="text-center mt-4">
    <a href="@Url.Action("Index", "Policy")" class="btn btn-secondary">Volver a la lista</a>
</div>

