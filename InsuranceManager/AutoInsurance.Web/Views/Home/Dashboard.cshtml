@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid bg-light py-5">
    <h1 class="text-center display-4 fw-bold">Dashboard</h1>
    <p class="text-center text-muted">Track key metrics and manage your insurance operations seamlessly.</p>
</div>

<div class="container py-5">
    <div class="row g-4">
        <!-- Metric Cards -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Clients</h5>
                    <h1>560</h1>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Active Policies</h5>
                    <h1>340</h1>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Payments</h5>
                    <h1>12</h1>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Claims This Month</h5>
                    <h1>25</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row g-4 mt-5">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recent Claims</h5>
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Customer</th>
                                <th>Status</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#00123</td>
                                <td>John Doe</td>
                                <td><span class="badge bg-success">Approved</span></td>
                                <td>$2,000</td>
                            </tr>
                            <tr>
                                <td>#00124</td>
                                <td>Jane Smith</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>$1,500</td>
                            </tr>
                            <tr>
                                <td>#00125</td>
                                <td>Alex Johnson</td>
                                <td><span class="badge bg-danger">Rejected</span></td>
                                <td>$0</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="/Policy/Create" class="text-decoration-none text-primary">Create New Policy</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/Vehicle/Create" class="text-decoration-none text-primary">Register New Vehicle</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/Claim/Create" class="text-decoration-none text-primary">File a Claim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
